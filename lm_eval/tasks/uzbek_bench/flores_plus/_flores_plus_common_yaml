dataset_path: openlanguagedata/flores_plus
dataset_name: uzn_Latn
output_type: generate_until

validation_split: dev
test_split: devtest

fewshot_split: dev
fewshot_config:
  sampler: first_n
num_fewshot: 1

process_docs: !function utils.flores_plus_process_docs
generation_kwargs:
  until:
    - "\n"              # Primary: single sentence translation
    - "</s>"            # Mistral, older models
    - "<eos>"           # Gemma 2/3
    - "<|end_of_text|>" # Llama 3 base
    - "<|eot_id|>"      # Llama 3 instruct
    - "<|endoftext|>"   # GPT-2, Phi, Qwen base
    - "<|im_end|>"      # Qwen instruct (ChatML)
    - "<end_of_turn>"   # Gemma instruct
  temperature: 0.0
  do_sample: false
  max_gen_toks: 256
metric_list:
  - metric: bleu
    aggregation: bleu
    higher_is_better: true
  - metric: chrf
    aggregation: chrf
    higher_is_better: true
  - metric: ter
    aggregation: ter
    higher_is_better: false

metadata:
  version: 1.0